<h1>index</h1>

<h1>投稿一覧</h1>

<% @books.each do |book| %>
  <p>タイトル</p>
   <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <p><%= book.body %></p>

<% end %>

<h1>New book</h1>
<%= form_with model: @new_book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>